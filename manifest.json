{
  "manifest_version": 3,
  "name": "Similar Website Recommender",
  "version": "1.0",
  "description": "Get recommended websites based on the current tab.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
 
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.webp",
    "default_title": "Similar Website Recommender"
  }
}
